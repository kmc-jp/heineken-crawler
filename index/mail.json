{
  "settings": {
    "analysis": {
      "analyzer": {
        "jp_analyzer": {
          "tokenizer": "standard",
          "char_filter": [
            "html_strip", "icu_normalizer"
          ],
          "filter": ["cjk_bigram"]
        }
      }
    }
  },

  "mappings": {
    "properties": {
      "category": {
        "type": "keyword"
      },
      "index": {
        "type": "integer"
      },
      "from": {
        "type": "text",
        "analyzer": "simple"
      },
      "to": {
        "type": "text",
        "analyzer": "simple"
      },
      "subject": {
        "type": "text",
        "analyzer": "jp_analyzer"
      },
      "body": {
        "type": "text",
        "analyzer": "jp_analyzer",
        "term_vector" : "with_positions_offsets"
      },
      "date": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      }
    }
  }
}
