{
  "settings": {
    "analysis": {
      "analyzer": {
        "jp_analyzer": {
          "tokenizer": "jp_tokenizer",
          "char_filter": [
            "html_strip", "icu_normalizer"
          ],
          "filter": []
        }
      },

      "tokenizer": {
        "jp_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 2,
          "token_chars": [
            "letter", "digit", "symbol", "punctuation"
          ]
        }
      }
    }
  },

  "mappings": {
    "message": {
      "_all": { "enabled": false },
      "properties": {
        "category": {
          "type": "keyword"
        },
        "index": {
          "type": "integer"
        },
        "from": {
          "type": "text",
          "analyzer": "simple"
        },
        "to": {
          "type": "text",
          "analyzer": "simple"
        },
        "subject": {
          "type": "text",
          "analyzer": "jp_analyzer"
        },
        "body": {
          "type": "text",
          "analyzer": "jp_analyzer",
          "term_vector" : "with_positions_offsets"
        },
        "date": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        }
      }
    }
  }
}
