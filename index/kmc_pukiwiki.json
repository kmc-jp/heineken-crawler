{
  "settings": {
    "analysis": {
      "analyzer": {
        "jp_analyzer": {
          "tokenizer": "jp_tokenizer",
          "char_filter": [
            "html_strip", "icu_normalizer"
          ],
          "filter": []
        }
      },

      "tokenizer": {
        "jp_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 3,
          "token_chars": [
            "letter", "digit", "symbol", "punctuation"
          ]
        }
      }
    }
  },

  "mappings": {
    "page": {
      "_all": { "enabled": false },
      "properties": {
        "title": {
          "type": "text",
          "analyzer": "jp_analyzer",
          "term_vector" : "with_positions_offsets"
        },
        "title_url_encoded": {
          "type": "keyword",
          "index": false
        },
        "body": {
          "type": "text",
          "analyzer": "jp_analyzer",
          "term_vector" : "with_positions_offsets"
        },
        "modified": {
          "type": "date",
          "format": "epoch_millis"
        }
      }
    }
  }
}
